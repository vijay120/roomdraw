<script src="//ajax.googleapis.com/ajax/libs/jquery/1.8.3/jquery.min.js">
</script>
<script>
$(document).ready(function(){


  $('tbody').find('tr').hover(

  	function(){
    	$(this).css("background-color","#cccccc");
  	},
  	function(){
    	$(this).css("background-color","#FFFFFF");
  	}).click(

  		function(){
  			var $link_child = $(this).find("td:first").find("a").attr("href");;
  			window.location = $link_child;
  		}

  	);

});
</script>

<h1><%= @dorm_name.capitalize%></h1>
<div class="row">
	<% for i in 1..@dorm_levels%>
				<div class="span10">
					<legend><%= "Floor #{i}" %></legend>
					<%= image_tag("#{@dorm_name}#{i}.jpg")%>
				</div>
				<div class="span2">
					<table class="table">
						<thead>
							<tr>
								<th>Room</th>
								<th>Size</th>
								<th>Groups</th>
							</tr>
						</thead>
					<tbody>
					<% @dorm_level_rooms[i].each do |room| %>
						<tr>
							<td><%= link_to "#{room.code}", room %></td>
							<td><%= room.size.capitalize%></td>
							<td><%= room.group_count%></td>
						</tr>
					<%end%>
				</tbody>
			</table>
		</div>
	<%end%>
</div>